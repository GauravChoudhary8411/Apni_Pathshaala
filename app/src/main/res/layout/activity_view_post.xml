<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_gradient"
    tools:context=".sale.ViewPost">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.example.apnipathshaala.utils.SquareImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/post_close"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_image"
                android:background="#273AB5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/post_title"
                    android:textColor="@color/black"
                    android:text="some title"
                    android:padding="10dp"
                    android:background="@color/white"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/post_title"
                    android:id="@+id/relLayout1"
                    android:background="@color/white"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/post_description"
                        android:textColor="@color/black"
                        android:text="some description about the post"
                        android:padding="10dp"/>


                  <!--  <TextView
                        android:id="@+id/contact_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="email"
                        android:layout_below="@+id/input_description"
                        android:layout_marginTop="50dp"
                        android:textColor="@color/black"
                        android:textSize="15sp" />  -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/post_price"
                        android:textColor="@color/black"
                        android:text="$20.99"
                        android:layout_below="@+id/post_description"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/post_city"
                        android:textColor="@color/black"
                        android:text="Vancouver, "
                        android:layout_below="@+id/post_price"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/post_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_price"
                        android:layout_marginLeft="-18dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/post_city"
                        android:padding="10dp"
                        android:text="British Columbia"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/post_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_price"
                        android:layout_marginLeft="-18dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/post_state"
                        android:padding="10dp"
                        android:text="Canada"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relLayout1"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/post_contact"
                        android:textColor="@color/white"
                        android:text="contact via email"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/bg_btn"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



</RelativeLayout>